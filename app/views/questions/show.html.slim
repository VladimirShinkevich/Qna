p Question

.question
  = render @question

p Answers list:

.answers
  = render @question.answers

p Ask new Answer:

.answer-errors
  =render 'shared/errors', resource: @answer

= form_with model: [@question, @answer], class: 'new-answer', local: false do |f|
  = f.text_area :body, placeholder: 'Body'
  p= f.submit 'Create answer'

p= link_to 'Back to questions list', questions_path
