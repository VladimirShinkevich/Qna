div
  h1(class="text-center") List of Questions
div(class="container-xl text-center")
  div(class='list-group')
    .questions-list
    - cache collection_cache_helper_for(:question)
      - @questions.each do |q|
          p= link_to "#{q.title} (author - #{q.author&.email})", question_path(q), class: "list-group-item list-group-item-action"

  - if policy(Question).create?
    br
    = link_to 'Ask question', new_question_path, type: 'button', class: 'btn btn-primary'
